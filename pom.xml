<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.web.cal</groupId>
  <artifactId>WebAppCal</artifactId>
  <packaging>war</packaging>
  <version>0.0.2-SNAPSHOT</version>
  <name>WebAppCal Maven Webapp</name>
  <url>http://maven.apache.org</url>
  <dependencies>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>4.8.2</version>
      <scope>test</scope>
    </dependency>
    <!-- https://mvnrepository.com/artifact/javax.servlet/servlet-api -->
<dependency>
    <groupId>javax.servlet</groupId>
    <artifactId>servlet-api</artifactId>
    <version>2.5</version>
</dependency>
  </dependencies>
<profiles>
<profile>
<id>dev</id>
<build>
<plugins>
<plugin>
  <groupId>org.apache.tomcat.maven</groupId>
  <artifactId>tomcat7-maven-plugin</artifactId>
  <version>2.2</version>
  <configuration>
      <url>http://13.59.65.179:8080/manager/text</url>
      <server>TomcatServer</server>
      <path>/AddSub</path>
  </configuration>
</plugin>
</plugins>
</build>
</profile>

<profile>
<id>prod</id>
<build>
<plugins>
<plugin>
  <groupId>org.apache.tomcat.maven</groupId>
  <artifactId>tomcat7-maven-plugin</artifactId>
  <version>2.2</version>
  <configuration>
      <url>http://18.216.202.18:8080/manager/text</url>
      <server>TomcatServer</server>
      <path>/OnlyAdd</path>
  </configuration>
</plugin>
</plugins>
</build>
</profile>

</profiles>
<distributionManagement>
  <snapshotRepository>
    <id>snapshots</id>
    <url>http://18.188.36.76:8081/nexus/content/repositories/snapshots</url>
  </snapshotRepository>
</distributionManagement>

</project>

